super + Return
    urxvt
super + a
    anki
super + b
    firefox
super + d
    rofi -lines 16 -padding 16 -width 30 -location 0 -show drun -sidebar-mode -columns 1
super + shift + d
    dmenu_run
super + n
    newsboat
super + m
    urxvt -e spt
super + r
    urxvt -e ranger

# Media keys

XF86AudioMute
    sh -c "pactl set-sink-mute 0 toggle ;"

XF86AudioLowerVolume
    sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 -5%"

XF86AudioRaiseVolume
    sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 +5%"

XF86AudioMicMute
    sh -c "pactl set-sink-mute 1 toggle ;"

XF86MonBrightnessDown
    xbacklight -dec 20

XF86MonBrightnessUp
    xbacklight -inc 20

XF86Tools
    sh -c "setxkbmap -model thinkpad -layout br -variant abnt && xmodmap ~/.Xmodmap"

XF86Bluetooth
    sh -c "setxkbmap -model thinkpad -layout us && xmodmap ~/.Xmodmap"

XF86Favorites
    echo "print b"

Print
    echo "print a"
